<%- include('../header.ejs') %>
<br />
<br />
<h1>Get All Data Course </h1>
<div class="container">
    <table class="table table-border">
        <tr>
            <th>S.no</th>
            <th>Name</th>
            <th>City</th>
            <th>Course</th>
            <th>Status</th>
            <th>Comment</th>
            <th></th>
            <th>Action</th>

        </tr>
        <% i=1 %>
        <% d.forEach((item)=>{ %>

            <!-- console.log(item) -->
            
            <tr>
                <td><%= i++ %></td>
                <td><%= item.name %></td>
                <td><%= item.city %></td>
                <td><%= item.course %></td>
                <td><%= item.status %></td>

                <td>
                    <form action="/update_status/<%= item._id %>" method="post" >
                        <textarea name="comment"></textarea>
                        <input type="hidden" name="name" value="<%= item.name %>">
                        <input type="hidden" name="email" value="<%= item.email %>">
                </td>
                <td>
                    <button type="submit" name="status" class="btn btn-info"
                        value="Approved">Approved</button>
                    <button type="submit" name="status" class="btn btn-danger"
                        value="Reject">Reject</button>

                    </form>
                </td>
                   

                    </form>
                </td>
                <td>
                    <a href="/courseView/<%= item._id %>" class="btn btn-primary">view</a>
                    <a href="/courseEdit/<%= item._id %>" class="btn btn-info">edit</a>
                    <a href="/course_delete/<%= item._id %>" class="btn btn-danger"hidden>delete</a>
                </td>
            </tr>
        <% }) %>


       
    </table>
</div>




